@model IEnumerable<MyLinq.MyDatabase.Categories>

@{
    ViewBag.Title = "CategoryIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CategoryIndex</h2>

<p>
    @Html.ActionLink("Yeni Kategori Ekle", "AddCategory", "", new { @class = "btn-btn-success" })

    @Html.ActionLink("Kategori Sil", "AddCategory", "", new { @class = "btn-btn-success" })
</p>
<table class="table table-bordered">
    <tr class="table table-primary">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td style="width:25px;">
                @Html.DisplayFor(modelItem => item.Picture)
      
                
            </td>
            <td>
                @Html.ActionLink("gnc", "CategoryUpdate", new { id = item.CategoryID }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("dty", "Details", new { id = item.CategoryID },new { @class = "btn btn-primary" }) |
                @Html.ActionLink("delete", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
